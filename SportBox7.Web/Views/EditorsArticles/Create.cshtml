@model SportBox7.Application.Features.Articles.Queries.Create.CreateDraftArticleOutputModel
@using SportBox7.Domain.Models.Articles.Enums
<!DOCTYPE html>
<html lang="bg">
<head>
    <meta charset="utf-8" />
    <meta name="description" content="Editor Login">
    <meta name="keywords" content="Editor Login)">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no" />
    <link rel="icon" href="">
    <title>Register new user - Sportbox7</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/style.css" />
</head>
<body>
    <header class="header-area">
        <!-- Top Header Area -->
        <div class="top-header-area">
            <div class="container">
                <div class="row">
                    <div class="col-12">
                        <div class="top-header-content d-flex align-items-center justify-content-between">
                            <!-- Logo -->
                            <div class="logo">
                                <a href="/"><img src="~/img/core-img/logoSmall.jpg" alt="sportBox7-logo"></a>
                            </div>
                            <!-- Advertisement -->
                            <div class="login-search-area d-flex align-items-center">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Navbar Area -->
        <div class="newspaper-main-menu" id="stickyMenu">
            <div class="classy-nav-container breakpoint-off">
                <div class="container">
                    <!-- Menu -->
                    <nav class="classy-navbar justify-content-between" id="newspaperNav">

                        <!-- Logo -->
                        <div class="logo">
                            <a href="index.html"><img src="~/img/core-img/logoSmall-black.jpg" alt="sportBox7 logo"></a>
                        </div>

                        <!-- Navbar Toggler -->
                        <div class="classy-navbar-toggler">
                            <span class="navbarToggler"><span></span><span></span><span></span></span>
                        </div>

                        <!-- Menu -->
                        <div class="classy-menu">

                            <!-- close btn -->
                            <div class="classycloseIcon">
                                <div class="cross-wrap"><span class="top"></span><span class="bottom"></span></div>
                            </div>

                            <!-- Nav Start -->
                            <div class="classynav">
                                <ul>
                                </ul>
                            </div>
                            <!-- Nav End -->
                        </div>
                    </nav>
                </div>
            </div>
        </div>
    </header>
    <partial name="_CookieConsentPartial" />
    <div class="hero-area">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-12 col-lg-8">
                </div>
            </div>
        </div>
    </div>
    <!-- ##### Hero Area End ##### -->
    <!-- ##### Blog Area Start ##### -->
    <div class="blog-area section-padding-0-80">
        <div class="container">
            <div class="row">
                <div class="col-12 col-lg-8">
                    <div class="blog-posts-area">
                        <!-- Single Featured Post -->
                        <div class="single-blog-post featured-post single-post">
                            <div class="post-data">
                                <a href="#" class="post-catagory"></a>
                                <div class="post-meta">
                                    <form asp-action="Create" enctype="multipart/form-data">
                                        <h4>Create new draft article</h4>
                                        <hr />
                                        <p class="text-danger">
                                            @foreach (var error in @Model.Errors)
                                            {
                                                @error<br />
                                            }
                                        </p>
                                        <div class="form-group">
                                            <label asp-for="@Model.Title"></label>
                                            <input asp-for="@Model.Title" class="form-control" />
                                        </div>
                                        <div class="form-group">
                                            <label asp-for="@Model.MetaDescription"></label>
                                            <input asp-for="@Model.MetaDescription" class="form-control" />
                                        </div>
                                        <div class="form-group">
                                            <label asp-for="@Model.MetaKeywords"></label>
                                            <input asp-for="@Model.MetaKeywords" class="form-control" />
                                        </div>
                                        <div class="form-group">
                                            <label asp-for="@Model.H1Tag"></label>
                                            <input asp-for="@Model.H1Tag" class="form-control" />
                                        </div>

                                        <div class="form-group">
                                            <label asp-for="@Model.Body"></label>
                                            <input asp-for="@Model.Body" class="form-control" />
                                        </div>
                                        <div class="form-group">
                                            <label asp-for="@Model.TargetDate"></label>
                                            <input asp-for="@Model.TargetDate" type="date" asp-format="{0:dd/MM/yyyy}" class="form-control" />
                                        </div>
                                        <div class="form-group">
                                            <label asp-for="@Model.SeoUrl"></label>
                                            <input asp-for="@Model.SeoUrl" class="form-control" />
                                        </div>
                                        <div class="form-group">
                                            <label asp-for="@Model.ImageUrl"></label>
                                            <input asp-for="@Model.ImageUrl" class="form-control" />
                                        </div>
                                        <div class="form-group">
                                            <label asp-for="@Model.Category"></label>
                                            <select asp-for="@Model.Category"
                                                    asp-items="@(new SelectList(Model.Categories.Select(x=> x.NameEn).ToList()))"
                                                    class="form-control">
                                            </select>
                                        </div>
                                        <div class="form-group">
                                            <label asp-for="@Model.ArticleType"></label>
                                            <select asp-for="@Model.ArticleType" asp-items="Html.GetEnumSelectList<ArticleType>()"
                                                    class="form-control">
                                            </select>
                                        </div>
                                        <div class="form-group">
                                            <label asp-for="@Model.Source"></label>
                                            <select asp-for="@Model.Source"
                                                    asp-items="@(new SelectList(Model.Sources.Select(x=> x.SourceName).ToList()))"
                                                    class="form-control">
                                            </select>
                                        </div>

                                        <div class="form-group">
                                            <button type="submit" class="btn btn-primary">Save draft</button>
                                        </div>
                                    </form>
                                    <!-- Post Like & Post Comment -->
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!--SideBar-->
                <div class="col-12 col-md-6 col-lg-4">
                </div>
                <!--SideBar End-->
            </div>
        </div>
    </div>
    <!-- ##### Blog Area End ##### -->
    <!-- ##### Featured Post Area End ##### -->
    <footer>
        <hr />
        <div class="bottom-footer-area">
            <div class="container h-100">
                <div class="row h-100 align-items-center">
                    <div class="col-12">
                        <!-- Copywrite -->
                        <p>
                            <!-- Link back to Colorlib can't be removed. Template is licensed under CC BY 3.0. -->
                            Copyright &copy;
                            <script>document.write(new Date().getFullYear());</script> All rights reserved | This template is made with <i class="fa fa-heart-o" aria-hidden="true"></i> by <a href="https://colorlib.com" target="_blank">Colorlib</a>
                            <!-- Link back to Colorlib can't be removed. Template is licensed under CC BY 3.0. -->
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </footer>
    <!-- ##### Footer Area Start ##### -->
    <!-- ##### All Javascript Files ##### -->
    <!-- jQuery-2.2.4 js -->
    <script src="~/lib/jquery/dist/jquery-2.2.4.min.js"></script>
    <!-- Popper js -->
    <script src="~/lib/bootstrap/dist/js/popper.min.js"></script>
    <!-- Bootstrap js -->
    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
    <!-- All Plugins js -->
    <script src="~/js/plugins.js"></script>
    <!-- Active js -->
    <script src="~/js/active.js"></script>
</body>

</html>
